#scatter plot
import matplotlib.pyplot as plt
import pandas as pd
df=pd.read_csv('plot.csv',delimiter=',')
print(df)
df.plot.scatter(x='a',y='b',color='g',marker='*')
plt.title('info',color='r')
plt.show()
#bar plot
import matplotlib.pyplot as plt
import pandas as pd
df=pd.read_csv('plot.csv',delimiter=',')
print(df)
df.plot.bar(color=['r','k'])
plt.xlabel('x axis')
plt.ylabel('y axis')
plt.title('info',color='r')
plt.legend()
plt.show()
#barh plot
