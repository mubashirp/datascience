#pie chart
import matplotlib.pyplot as plt
import pandas as pd
df=pd.read_csv('plot.csv',delimiter=',')
print(df)
df.plot.pie(subplots=True)
plt.title('info',color='r')
plt.legend()
plt.show()
#line plot
import matplotlib.pyplot as plt
import pandas as pd
df=pd.read_csv('plot.csv',delimiter=',')
print(df)
df.plot(color=['r','k'])
plt.xlabel('x axis')
plt.ylabel('y axis')
plt.title('info',color='r')
plt.legend()
plt.show()
